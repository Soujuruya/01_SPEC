{
    "swagger": "2.0",
    "info": {
        "description": "API ядро системы геооповещений, интегрируется с новостным порталом (Django) через вебхуки.",
        "title": "01_SPEC Geo-notification system core API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/incidents": {
            "get": {
                "description": "Получает все активные и неактивные инциденты с поддержкой пагинации",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "incident"
                ],
                "summary": "Get All Incidents",
                "parameters": [
                    {
                        "type": "integer",
                        "default": 10,
                        "description": "Limit for pagination",
                        "name": "limit",
                        "in": "query"
                    },
                    {
                        "type": "integer",
                        "default": 0,
                        "description": "Offset for pagination",
                        "name": "offset",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/incident.IncidentListResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid limit/offset",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    }
                }
            },
            "post": {
                "description": "Создаёт новый инцидент с указанным заголовком, координатами и радиусом",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "incident"
                ],
                "summary": "Create Incidents",
                "parameters": [
                    {
                        "description": "Incident creation data",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/incident.CreateIncidentRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/incident.IncidentResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    }
                }
            }
        },
        "/incidents/active": {
            "get": {
                "description": "Получает все активные инциденты",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "incident"
                ],
                "summary": "Get All Active Incidents",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/incident.IncidentListResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    }
                }
            }
        },
        "/incidents/stats": {
            "get": {
                "description": "Возвращает кол-во уникальных пользователей за последние N минут, попавших в инцидент",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "stats"
                ],
                "summary": "Get Incidents Stats",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/stats.StatsResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    }
                }
            }
        },
        "/incidents/{id}": {
            "get": {
                "description": "Получает инцидент по UUID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "incident"
                ],
                "summary": "Get Incident by ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Incident UUID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/incident.IncidentResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid UUID",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    },
                    "404": {
                        "description": "Incident not found",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    }
                }
            },
            "delete": {
                "description": "Деактивирует инцидент, не удаляя его полностью",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "incident"
                ],
                "summary": "Deactivate Incident by ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Incident UUID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No Content"
                    },
                    "400": {
                        "description": "Invalid UUID",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    },
                    "404": {
                        "description": "Incident not found",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    }
                }
            },
            "patch": {
                "description": "Обновляет данные об инциденте (частичное обновление)",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "incident"
                ],
                "summary": "Update Incident by ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Incident UUID",
                        "name": "id",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Incident update data",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/incident.UpdateIncidentRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/incident.IncidentResponse"
                        }
                    },
                    "400": {
                        "description": "Invalid UUID or request body",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    },
                    "404": {
                        "description": "Incident not found",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    }
                }
            }
        },
        "/location/check": {
            "post": {
                "description": "Возвращает локации инцидентов, в которые попал пользователь",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "location"
                ],
                "summary": "Check user location incidents",
                "parameters": [
                    {
                        "description": "User location data",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/location.CheckLocationRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/location.LocationResponse"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/httphelper.APIResponse"
                        }
                    }
                }
            }
        },
        "/system/health": {
            "get": {
                "description": "Проверка доступности API",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "health"
                ],
                "summary": "Health Check",
                "responses": {
                    "200": {
                        "description": "status: ok",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
